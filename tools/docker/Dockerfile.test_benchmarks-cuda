ARG TOOLCHAIN=cp2k/toolchain:latest
FROM ${TOOLCHAIN}

# author: Ole Schuett

WORKDIR /workspace

COPY ./scripts/install_basics.sh .
RUN ./install_basics.sh

COPY ./scripts/install_benchmarks.sh .
RUN ./install_benchmarks.sh local_cuda

COPY ./scripts/ci_entrypoint.sh ./scripts/test_benchmarks.sh ./
CMD ["./ci_entrypoint.sh", "./test_benchmarks.sh", "local_cuda"]

#EOF
