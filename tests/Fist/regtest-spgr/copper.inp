 &GLOBAL
   PRINT_LEVEL  MEDIUM
   PROJECT_NAME copper
   RUN_TYPE  CELL_OPT
 &END GLOBAL
 &MOTION
   &CELL_OPT
     OPTIMIZER  BFGS
     MAX_ITER  1
     KEEP_ANGLES  T
     KEEP_SYMMETRY  T
     KEEP_SPACE_GROUP T
     EPS_GEO 1.e-4
     EPS_SPGR 1e-4
   &END CELL_OPT
 &END MOTION
 &FORCE_EVAL
   METHOD  QS
   STRESS_TENSOR  ANALYTICAL
   &DFT
     BASIS_SET_FILE_NAME BASIS_MOLOPT
     POTENTIAL_FILE_NAME GTH_POTENTIALS
     MULTIPLICITY  1
     CHARGE  0
     &SCF
       MAX_SCF  1
       SCF_GUESS  ATOMIC
       ADDED_MOS  100
       &SMEAR ON
         METHOD FERMI_DIRAC
         ELECTRONIC_TEMPERATURE 300
       &END SMEAR
       &MIXING
         METHOD BROYDEN_MIXING
         ALPHA 0.4
         BETA 0.5
         NBROYDEN 8
         NMIXING 2
       &END MIXING
     &END SCF
     &QS
       METHOD GPW
     &END QS
     &MGRID
       NGRIDS  4
       CUTOFF    200.0
       REL_CUTOFF  20.0
     &END MGRID
     &XC
       &XC_FUNCTIONAL  NO_SHORTCUT
         &PBE  T
         &END PBE
       &END XC_FUNCTIONAL
     &END XC
     &POISSON
       POISSON_SOLVER  PERIODIC
       PERIODIC  XYZ
     &END POISSON
   &END DFT
   &SUBSYS
     &CELL
       A  3.6150000000         0.0000000000         0.0000000000
       B  0.0000000000         3.6150000000         0.0000000000
       C  0.0000000000         0.0000000000         3.6150000000
       PERIODIC  XYZ
       MULTIPLE_UNIT_CELL  1 1 1
       SYMMETRY  CUBIC
     &END CELL
     &COORD
Cu      0.0000000000  0.0000000000  0.0000000000
Cu      0.5000000000  0.0000000000  0.5000000000
Cu      0.5000000000  0.5000000000  0.0000000000
Cu      0.0000000000  0.5000000000  0.5000000000
       UNIT angstrom
       SCALED  T
     &END COORD
     &KIND Cu
       BASIS_SET DZVP-MOLOPT-SR-GTH-q11
       POTENTIAL GTH-PBE-q11
     &END KIND
     &TOPOLOGY
       NUMBER_OF_ATOMS  4
       MULTIPLE_UNIT_CELL  1 1 1
     &END TOPOLOGY
   &END SUBSYS
  &PRINT
     &STRESS_TENSOR  ON
       NDIGITS 16
     &END STRESS_TENSOR
   &END PRINT
 &END FORCE_EVAL
