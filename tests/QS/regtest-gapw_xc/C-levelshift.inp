&GLOBAL
  PROJECT C-levelshift
  PRINT_LEVEL LOW
&END GLOBAL
&FORCE_EVAL
  METHOD Quickstep
  &DFT
    ROKS
    MULTIPLICITY 3
    BASIS_SET_FILE_NAME BASIS_SET
    POTENTIAL_FILE_NAME POTENTIAL
    &MGRID
      CUTOFF 200
    &END MGRID
    &POISSON
      PERIODIC NONE
      POISSON_SOLVER MT
    &END POISSON
    &QS
      EPS_DEFAULT 1.0E-12
      METHOD GAPW_XC
    &END QS
    &SCF
      CHOLESKY OFF
      EPS_SCF 1.E-3
      LEVEL_SHIFT [eV] 20.00
      ROKS_SCHEME high-spin
      ROKS_PARAMETERS 1/3 2/3 1/3 1/3 2/3 1/3
      SCF_GUESS atomic
    &END SCF
    &XC
      &XC_FUNCTIONAL PADE
      &END XC_FUNCTIONAL
    &END XC
  &END DFT
  &SUBSYS
    &CELL
      ABC 5.0 5.0 5.0
      PERIODIC NONE
    &END CELL
    &COORD
      C   0.000000  0.000000  0.000000
    &END COORD
    &KIND C
      BASIS_SET  DZVP-GTH-PADE
      POTENTIAL  GTH-PADE-q4
      RADIAL_GRID 50
      LEBEDEV_GRID 50
    &END KIND
    &PRINT
      &KINDS
        BASIS_SET
        POTENTIAL
      &END KINDS
    &END PRINT
  &END SUBSYS
&END FORCE_EVAL
