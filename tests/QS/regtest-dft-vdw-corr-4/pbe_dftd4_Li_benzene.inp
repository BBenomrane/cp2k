&GLOBAL
  PRINT_LEVEL MEDIUM
  PROJECT dftd4_1.9_ae
  RUN_TYPE ENERGY
&END GLOBAL

&FORCE_EVAL
  METHOD QS
  &DFT
    BASIS_SET_FILE_NAME BASIS_MOLOPT_UZH
    CHARGE 1
    POTENTIAL_FILE_NAME POTENTIAL_UZH
    &MGRID
      CUTOFF 400
      NGRIDS 4
      REL_CUTOFF 60
    &END MGRID
    &POISSON
      PERIODIC none
      POISSON_SOLVER ANALYTIC
    &END POISSON
    &QS
      EPS_DEFAULT 1.0E-12
      METHOD GAPW
    &END QS
    &SCF
      EPS_SCF 1.0E-5
      MAX_SCF 40
      SCF_GUESS ATOMIC
      &OT ON
        MINIMIZER DIIS
        PRECONDITIONER FULL_ALL
      &END OT
      &OUTER_SCF
        EPS_SCF 1.0E-5
        MAX_SCF 10
      &END OUTER_SCF
    &END SCF
    &XC
      &VDW_POTENTIAL
        DISPERSION_FUNCTIONAL PAIR_POTENTIAL
        &PAIR_POTENTIAL
          REFERENCE_FUNCTIONAL PBE
          TYPE DFTD4
          &PRINT_DFTD
          &END PRINT_DFTD
        &END PAIR_POTENTIAL
      &END VDW_POTENTIAL
      &XC_FUNCTIONAL PBE
      &END XC_FUNCTIONAL
    &END XC
  &END DFT
  &SUBSYS
    &CELL
      ABC 7.0 7.0 7.0
      PERIODIC NONE
    &END CELL
    &KIND Li
      BASIS_SET ORB DZVP-MOLOPT-PBE-GTH-q3
      POTENTIAL GTH-PBE-q3
    &END KIND
    &KIND H
      BASIS_SET ORB DZVP-MOLOPT-PBE-GTH-q1
      POTENTIAL GTH-PBE-q1
    &END KIND
    &KIND C
      BASIS_SET ORB DZVP-MOLOPT-PBE-GTH-q4
      POTENTIAL GTH-PBE-q4
    &END KIND
    &TOPOLOGY
      CONNECTIVITY OFF
      COORDINATE XYZ
      COORD_FILE_NAME Li_benzene_1.9.xyz
      &CENTER_COORDINATES
      &END CENTER_COORDINATES
    &END TOPOLOGY
  &END SUBSYS
&END FORCE_EVAL
